.ravioli-check
  @extends $container
  @extends $space
  @extends $typography
  user-select none

  &-box
    @extends $box
    @extends $no-focus
    @extends $focus
    display inline-block
    width 21px
    height @width
    vertical-align middle

    &.ravioli--is-checked
      color white
      background-color #333
      border-color @background-color

      &:focus
        border-color white

    .ravioli-icon
      position relative
      display block
      top -1px
      left -3px
      font-size 21px

  &-label
    position relative
    top 1px
    vertical-align middle
    cursor default

    .ravioli-check-box + &
      margin-left 10px
